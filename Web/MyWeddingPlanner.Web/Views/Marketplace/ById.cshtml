@using MyWeddingPlanner.Common
@model MyWeddingPlanner.Web.ViewModels.Marketplace.SingleItemViewModel
    <div class="row">
        <div class="row col-lg-8">
            <div class="col-lg-12 pt-4 pt-lg-0 content" style="position:relative; top:165px;">
                <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img src=@Model.ImageUrls[0] class="d-block w-100" alt="...">
                        </div>
                        @for (int i = 1; i < @Model.ImageUrls.Length; i++)
                        {
                            <div class="carousel-item">
                                <img src=@Model.ImageUrls[i] class="d-block w-100" alt="...">
                            </div>
                        }
                        @*<div class="carousel-item active">
                                <img src="https://res.cloudinary.com/ufn/image/upload/c_pad,f_auto,fl_progressive,h_500,w_445/u7cdzxvxu69pmubmtltc.jpg" class="d-block w-100" alt="...">
                            </div>
                            <div class="carousel-item">
                                <img src="https://images.bunches.co.uk/products/large/PRODUCT_FLOWERS_Cherry_Blossom_image1.jpg" class="d-block w-100" alt="...">
                            </div>
                            <div class="carousel-item">
                                <img src="https://images.bunches.co.uk/products/large/PRODUCT_FLOWERS_Cherry_Blossom_image1.jpg" class="d-block w-100" alt="...">
                            </div>*@
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
        </div>

        <section id="about" class="about col-lg-4" style="position:relative; top:90px;">
            <div class="container" data-aos="fade-up">
                <div class="row">
                    <div class="col-lg-12 content">
                        <h3>@Model.Name</h3>
                        <p class="font-italic">
                            @Model.CategoryName
                        </p>
                        @if (User.Identity.Name == @Model.SellerEmail|| this.User.IsInRole(GlobalConstants.AdministratorRoleName))
                        {
                            <a class="btn btn-secondary" asp-controller="Marketplace" asp-action="Delete" asp-route-id="@Model.Id">Delete this item</a>
                        }
                        <div class="row">
                            <div class="col-lg-6">
                                <ul>
                                    <li><i class="icofont-rounded-right"></i> <strong>Price: </strong>@Model.Price$</li>
                                    <li><i class="icofont-rounded-right"></i> <strong>Sold by: </strong> @Model.SellerEmail</li>
                                    <li><i class="icofont-rounded-right"></i> <strong>Phone:</strong> @Model.SellerPhone</li>
                                </ul>
                            </div>
                        </div>
                        <h4><strong>Description</strong></h4>
                            <p>
                                @Model.Description
                            </p>
                    </div>
                </div>

            </div>
        </section><!-- End About Section -->
    </div>