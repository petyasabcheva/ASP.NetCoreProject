@model MyWeddingPlanner.Web.ViewModels.Marketplace.ItemsListViewModel
@{
    this.ViewData["Title"] = @Model.CategoryName;
}

<h1>@this.ViewData["Title"]</h1>
<a class="btn btn-secondary" asp-controller="Marketplace" asp-action="Create">Add an Item for Sale</a>
<hr />
<div class="row">
    @if (@Model.Items.Count() == 0)
    {
        <h2> Items for Sale in category @Model.CategoryName will be available soon :) </h2>
    }
    @foreach (var item in this.Model.Items)
    {
        <div class="card" style="width: 18rem;">
            <img src=@item.ImageUrl class="card-img-top" alt="...">
            <div class="card-body">
                <h5 class="card-title">
                    @item.Name
                </h5>
                <p class="card-text">@item.CategoryName</p>
                <p class="card-text">@item.Price</p>
                <a asp-action="ById" asp-route-id="@item.Id" class="btn btn-secondary">Details</a>
            </div>
        </div>
    }
</div>
<hr />

<partial name="_PagingPartial" model="@Model" />