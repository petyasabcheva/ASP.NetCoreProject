@model MyWeddingPlanner.Web.ViewModels.Vendors.SingleVendorViewModel

<section id="about" class="about">
    <div class="container" data-aos="fade-up">

        <div class="section-title">
            <h2>About</h2>
        </div>

        <div class="row">
            <div class="col-lg-1"> </div>
            <div class="col-lg-10 pt-4 pt-lg-0 content">
                <h3>@Model.Name</h3>
                <p class="font-italic">
                    <strong>Services offered:</strong> @string.Join(", ", @Model.ServicesNames)
                </p>
                <div class="row">
                    <div class="col-lg-6">
                        <ul>
                            <li><i class="icofont-rounded-right"></i> <strong>Email::</strong> @Model.Email</li>
                            <li><i class="icofont-rounded-right"></i> <strong>Website:</strong> <a href="@Model.WebPage">@Model.WebPage</a></li>

                        </ul>
                    </div>
                    <div class="col-lg-6">
                        <ul>
                            <li><i class="icofont-rounded-right"></i> <strong>Phone:</strong> @Model.PhoneNumber</li>
                            @*<li><i class="icofont-rounded-right"></i> <strong>City:</strong> @Model.Address</li>*@
                        </ul>
                    </div>
                </div>
                <p>
                    @Model.Description
                </p>
            </div>
        </div>

    </div>
</section><!-- End About Section -->

<div class="row">
    <div class="col-lg-1"> </div>
    <div class="col-lg-10 pt-4 pt-lg-0 content">
        <h3>Portfolio</h3>
        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src=@Model.ImageUrls[0] class="d-block w-100" alt="...">
                </div>
                @for (int i = 1; i < @Model.ImageUrls.Length; i++)
                {
                    <div class="carousel-item">
                        <img src=@Model.ImageUrls[i] class="d-block w-100" alt="...">
                    </div>
                }
                @*<div class="carousel-item active">
                        <img src="https://res.cloudinary.com/ufn/image/upload/c_pad,f_auto,fl_progressive,h_500,w_445/u7cdzxvxu69pmubmtltc.jpg" class="d-block w-100" alt="...">
                    </div>
                    <div class="carousel-item">
                        <img src="https://images.bunches.co.uk/products/large/PRODUCT_FLOWERS_Cherry_Blossom_image1.jpg" class="d-block w-100" alt="...">
                    </div>
                    <div class="carousel-item">
                        <img src="https://images.bunches.co.uk/products/large/PRODUCT_FLOWERS_Cherry_Blossom_image1.jpg" class="d-block w-100" alt="...">
                    </div>*@
            </div>
            <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
</div>