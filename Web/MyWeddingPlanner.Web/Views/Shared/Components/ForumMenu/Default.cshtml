@model IEnumerable<MyWeddingPlanner.Data.Models.Forum.ForumCategory>

<li class="nav-item">
    <div class="dropdown show">
        <a class="btn dropdown-toggle" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            Forum
        </a>
        <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
            <a class="nav-link text-dark" asp-area="" asp-controller="Forum" asp-action="All">View all</a>
            <div class="dropdown-divider"></div>
            @foreach (var category in @Model)
            {
                <a class="dropdown-item" asp-controller="Forum" asp-action="Category" asp-route-categoryId="@category.Id" asp-route-categoryName="@category.Name" asp-route-id="1">@category.Name</a>
            }
        </div>
    </div>
</li>