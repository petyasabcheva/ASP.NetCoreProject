@model IEnumerable<MyWeddingPlanner.Data.Models.Blog.BlogCategory>

<li class="nav-item">
    <div class="dropdown show">
        <a class="btn dropdown-toggle" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            Blog
        </a>
        <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
            <a class="nav-link text-dark" asp-area="" asp-controller="Blog" asp-action="All">View all</a>
            <div class="dropdown-divider"></div>
            @foreach (var category in @Model)
            {
                <a class="dropdown-item" asp-controller="Blog" asp-action="Category" asp-route-categoryId="@category.Id" asp-route-categoryName="@category.Name" asp-route-id=1>@category.Name</a>
            }
        </div>
    </div>
</li>