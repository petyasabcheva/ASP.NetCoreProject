@model MyWeddingPlanner.Web.ViewModels.Forum.PostsListViewModel
@{
    this.ViewData["Title"] = "All Forum Posts";
}

<h1>@this.ViewData["Title"]</h1>
<a class="btn btn-secondary" asp-controller="Forum" asp-action="Create">Add a Post</a>
<hr />
<div class="row">
    @foreach (var post in this.Model.Posts)
    {
        <div class="card col-lg-12" style="width: 18rem;">
            <div class="card-body">
                <h5 class="card-title">
                    @post.Title
                </h5>
                <p class="card-text">@post.Email</p>
                <p class="card-text">@post.Content</p>
                <a asp-action="ById" asp-route-id="@post.Id" class="btn btn-secondary">Details</a>
            </div>
        </div>
    }
</div>
<hr />

<partial name="_PagingPartial" model="@Model" />